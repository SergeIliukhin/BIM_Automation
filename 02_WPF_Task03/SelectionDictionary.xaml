<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:fontsCollections="clr-namespace:System.Collections;assembly=mscorlib"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">
    <fontsCollections:ArrayList x:Key="fontName">
        <system:String>Arial</system:String>
        <system:String>TimesNewRoman</system:String>
        <system:String>Verdana</system:String>
    </fontsCollections:ArrayList>
    <fontsCollections:ArrayList x:Key="fontSize">
        <system:String>12</system:String>
        <system:String>14</system:String>
        <system:String>16</system:String>
    </fontsCollections:ArrayList>
</ResourceDictionary>